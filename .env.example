# Autograder Agent - Environment Configuration
# Copy this file to .env and configure your settings

# ============================================
# LLM Provider Selection
# ============================================
# Choose: 'ollama' (local), 'openai', or 'anthropic'
LLM_PROVIDER=ollama

# ============================================
# Ollama Configuration (Local - Recommended)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Recommended models for grading:
# - llama3.2 (good balance)
# - llama3.1:70b (more accurate, slower)
# - qwen2.5:14b (good for code analysis)

# ============================================
# OpenAI Configuration (Cloud API)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# ============================================
# Anthropic Configuration (Cloud API)
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ============================================
# Agent Settings
# ============================================
MAX_TOKENS=4096
TEMPERATURE=0.1

# ============================================
# File Settings
# ============================================
MAX_FILE_SIZE_MB=50
